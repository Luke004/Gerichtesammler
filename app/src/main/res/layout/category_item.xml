<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_category_layout"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:text="Kategorie"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/category_color_pick_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_marginEnd="12dp"
        android:layout_toLeftOf="@id/category_delete_btn"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/category_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_delete_forever_grey_24dp" />

</RelativeLayout>