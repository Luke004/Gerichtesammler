<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_category_layout"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:padding="6dp">

    <EditText
        android:id="@+id/category_name"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@id/category_color_pick_btn"
        android:ems="8"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/category_color_pick_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@id/category_delete_btn"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/category_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_delete_forever_grey_24dp" />

</RelativeLayout>